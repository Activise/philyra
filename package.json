{
    "name": "philyra",
    "displayName": "philyra",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "philyra",
                "aliases": [
                    "Philyra",
                    "philyra"
                ],
                "extensions": [
                    ".pyl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "philyra",
                "scopeName": "source.philyra",
                "path": "./syntaxes/philyra.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:philyra"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "philyra-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run clean && tsc --noEmit && npm run lint && node esbuild.js --minify",
        "clean": "rimraf out",
        "build": "node esbuild.js",
        "watch": "node esbuild.js --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "colors": "^1.4.0",
        "commander": "^9.0.0",
        "esbuild": "^0.14.26",
        "eta": "^1.12.3",
        "langium": "file:vendor/langium/packages/langium",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "vscode-uri": "^3.0.3"
    },
    "devDependencies": {
        "@types/node": "^17.0.16",
        "@types/vscode": "^1.64.0",
        "@typescript-eslint/eslint-plugin": "^5.11.0",
        "@typescript-eslint/parser": "^5.11.0",
        "eslint": "^8.8.0",
        "langium-cli": "file:vendor/langium/packages/langium-cli",
        "typescript": "^4.5.5"
    }
}