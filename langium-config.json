{
    "projectName": "Philyra",
    "languages": [
        {
            "id": "philyra",
            "grammar": "src/language/philyra.langium",
            "fileExtensions": [
                ".pyl"
            ],
            "textMate": {
                "out": "syntaxes/philyra.tmLanguage.json"
            }
        }
